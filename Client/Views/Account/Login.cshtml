@using Web.Api.Web.Shared.Helpers.Keys
@model Web.Api.Logic.Models.Account.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    var message = ViewData[ViewDataKeys.ErrorMessage] ?? "Sign in to start your session";
}

<form asp-controller="Account" asp-action="Login" method="post" asp-route-returnurl="@ViewBag.ReturnUrl">
    <div asp-validation-summary="ModelOnly" class="login-box-msg text-danger"></div>
    <div class="input-group mb-3">
        <input asp-for="@Model.Email" class="form-control" placeholder="Email">
        <div class="input-group-append">
            <div class="input-group-text">
                <span class="fas fa-envelope"></span>
            </div>
        </div>
    </div>
    <div class="input-group mb-3">
        <input asp-for="@Model.Password" class="form-control" placeholder="Password">
        <div class="input-group-append">
            <div class="input-group-text">
                <span class="fas fa-lock"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-8">
            <div class="icheck-primary">
                <input asp-for="@Model.RememberMe">
                <label asp-for="@Model.RememberMe">
                    Remember Me
                </label>
            </div>
        </div>
        <div class="col-4">
            <button type="submit" class="btn btn-primary btn-block">Log In</button>
        </div>
    </div>
</form>